<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/textViewResultItemQuestionNumberAndText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textStyle="bold"
            tools:text="1. What is the primary function of a cell?" />

        <TextView
            android:id="@+id/textViewResultItemCorrectAnswerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Correct Answer:"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/textViewResultItemCorrectAnswerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody2"
            tools:text="To carry out metabolic processes throughout the body." />

        <TextView
            android:id="@+id/textViewResultItemYourAnswerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Your Answer:"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?attr/colorError" />

        <TextView
            android:id="@+id/textViewResultItemYourAnswerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?attr/colorError"
            tools:text="The powerhouse of the cell." />

    </LinearLayout>

</androidx.cardview.widget.CardView>