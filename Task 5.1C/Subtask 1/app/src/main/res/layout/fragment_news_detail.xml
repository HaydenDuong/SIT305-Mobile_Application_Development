<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.NewsDetailFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/detailNewsImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/detailNewsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="News Title"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/detailNewsInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="News Info"
        android:textAlignment="center"
        android:layout_margin="10dp" />
    
    <TextView
        android:id="@+id/detailRelatedNewsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Related News"
        android:textStyle="bold"
        android:layout_margin="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/relatedNewsRecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>